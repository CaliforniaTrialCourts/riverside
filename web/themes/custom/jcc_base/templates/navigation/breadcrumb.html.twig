{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}
{% if breadcrumb %}
  {% set breadcrumbs = [] %}

  {% for item in breadcrumb %}
    {% set url = item.url %}
    {% set label = item.text %}
    {% set breadcrumb_item = {
      url: url,
      label: label
    } %}

    {% set breadcrumbs = breadcrumbs|merge([breadcrumb_item]) %}
  {% endfor %}

  {% include '@molecules/navigation/breadcrumbs/breadcrumbs.twig' with {
    breadcrumbs: breadcrumbs
  } %}
{% endif %}
