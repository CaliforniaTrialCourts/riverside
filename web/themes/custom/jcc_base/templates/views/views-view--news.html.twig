{#
  Create headergroup.
     `title: title` isn't working.
     I think because block displays don't render titles.
     `title: view.storage.label` will work.
#}

{% set headergroup = {
  title: title,
} %}

{# Create cards array. #}
{% set cards = [] %}
{% set news_rows = rows.0['#rows'] %}
{% for key, item in news_rows %}
  {%  set cards = cards|merge([{
    title: item['#node'].label,
    brow: item['#node'].fields.created.0.value|date("F j, Y")
  }]) %}
{% endfor %}

