{# Card list demo link: https://deploy-preview-164--pensive-swanson-392c50.netlify.com/?p=organisms-cards-with-list#}
{% include '@organisms/sections/cards-with-list/cards-with-list.twig' with {
  cards_with_list: {
    headergroup: headergroup,
    cards: cards
  }
} %}
